" MacVim/gvim inherits most settings from the vimrc file. I like to
" keep MacVim/gvim as close to terminal VIM as possible.
set lines=64 columns=120                    " set the default window size for MacVim/gvim
set guioptions-=T                           " hide MacVim/gvim toolbar
set guioptions-=L                           " hide left scrollbar
set background=light                        " force light background
